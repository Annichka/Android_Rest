<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="76dp"
    android:orientation="horizontal"
    android:padding="2dip"
    android:id="@+id/list_item_reLay"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/list_item_bremove"
        android:background="@drawable/remove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@+id/list_item_badd"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/list_item_badd"
        android:background="@drawable/add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="440dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/list_item_tvEnFoodName"
        android:layout_toStartOf="@+id/list_item_etQuantity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="raod"
        android:textSize="14sp"
        android:id="@+id/list_item_etQuantity"
        android:layout_marginRight="21dp"
        android:layout_alignBottom="@+id/list_item_edit"
        android:layout_alignEnd="@+id/list_item_tvSum"
        android:layout_marginEnd="32dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/edit"
        android:id="@+id/list_item_edit"
        android:layout_alignBottom="@+id/list_item_tvEnFoodName"
        android:layout_toStartOf="@+id/list_item_bremove"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_tvEnFoodName"
        android:text="@string/დასახ"
        android:clickable="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ფას"
        android:textSize="14sp"
        android:id="@+id/list_item_tvPrice"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ჯამ"
        android:textSize="14sp"
        android:id="@+id/list_item_tvSum"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/list_item_bremove"
        android:layout_toStartOf="@+id/list_item_bremove" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/list_item_bimage"
        android:src="@drawable/menuitem"
        android:layout_gravity="left|top"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/list_item_tvEnFoodName"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/note"
        android:id="@+id/list_item_bnote"
        android:layout_alignTop="@+id/list_item_tvEnFoodName"
        android:layout_toEndOf="@+id/list_item_tvEnFoodName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="დრო"
        android:id="@+id/list_item_tvEnCookingTime"
        android:layout_below="@+id/list_item_tvPrice"
        android:layout_alignStart="@+id/list_item_tvPrice" />


</RelativeLayout>