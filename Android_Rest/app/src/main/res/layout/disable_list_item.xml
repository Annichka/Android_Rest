<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="76dp"
    android:orientation="horizontal"
    android:padding="2dip"
    android:id="@+id/list_item_reLay"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/რაოდ"
        android:textSize="14sp"
        android:id="@+id/list_item_tvQuantity"
        android:layout_below="@+id/list_item_tvPrice"
        android:layout_alignLeft="@+id/list_item_tvPrice"
        android:layout_alignStart="@+id/list_item_tvPrice"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_tvDsbFoodName"
        android:text="@string/დასახელება"
        android:clickable="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_alignTop="@+id/list_item_bimage"
        android:layout_alignStart="@+id/list_item_tvPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ფასი"
        android:textSize="14sp"
        android:id="@+id/list_item_tvPrice"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/list_item_tvDsbFoodName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ჯამი"
        android:textSize="14sp"
        android:id="@+id/list_item_tvSum"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/list_item_tvDsbFoodName"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/list_item_bimage"
        android:src="@drawable/menuitem"
        android:layout_gravity="left|top"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/note"
        android:id="@+id/list_item_bDsbNote"
        android:layout_alignBottom="@+id/list_item_tvDsbFoodName"
        android:layout_toEndOf="@+id/list_item_tvDsbFoodName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="დრო"
        android:id="@+id/list_item_tvDsbCookingTime"
        android:layout_above="@+id/list_item_tvQuantity"
        android:layout_alignStart="@+id/list_item_tvSum" />

</RelativeLayout>